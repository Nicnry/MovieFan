@model List<Movies>
@{
    ViewData["Title"] = "index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container">
        <h1>index</h1>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nom du film</th>
                    <th scope="col">Nom de la catégorie</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Movies movie in Model)
                {
                <tr>
                    <th scope="row">@movie.Id</th>
                    <td>@movie.Title</td>
                    <td>@movie.Category.Name</td>
                    <td><a href="/Movie/Details/@movie.Id" class="btn btn-outline-primary" role="button" aria-pressed="true">Afficher le film</a></td>
                </tr>
                }
            </tbody>
        </table>
        <a asp-action="Create" class="btn btn-sm btn-success m-3">Nouveau film</a>
    </div>